<dbformat>
  <field offset="0000" name="guid" type="u32" size="4" />
  <field offset="0004" name="unk1" type="u32" size="4" />
  <field offset="0008" name="unk2" type="u32" size="4" />
  <field offset="000c" name="pet_level" type="u32" size="4" /> <!-- pet level -->
  <field offset="002c" name="skill" type="u32" size="4" /> <!-- available passive skill -->
  <field offset="0030" name="skill_level" type="u32" size="4" /> <!-- maximum skill level for this level -->
  <field offset="0034" name="unk3" type="u32" size="4" /> <!-- =500 -->
</dbformat>
